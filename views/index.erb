<!doctype html>
<head>
    <title>
        Github Issue Tracker
    </title>
</head>
<style>
    body {
        height: 100%;
    }
    #search-bar{
        text-align: center;
        margin-top: 15%;
    }
    #search-bar input[type=text]{
        width: 60%;
        border-radius: 3px 3px 3px 3px;
        height: 30px;
        box-shadow: inset 0 1px 2px rgba(0,0,0,0.075);
        -moz-appearance: none;
        -webkit-appearance: none;
        appearance: none;
  float: left;
  width: 0em;
  height: 2em;
  margin: 1em;
  margin-right: -4.5em;
  background: #fff;
  color: #6A5D4F;
  font-size: 1em;
  font-weight: 600;
  padding: 0px;
  border: 0;
  border-radius: 5px;
  box-shadow: 0 1px 5px rgba(0, 0, 0, 0.2) inset;
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.15);
  -moz-transition: all 0.25s;
  -webkit-transition: all 0.25s;
    }
    input:focus {
  outline: none;
  box-shadow: 0 -1px 1px rgba(255, 255, 255, 0.25), 0 1px 5px rgba(0, 0, 0, 0.15);
}
    #search-bar input[type=submit]{
        height: 30px;
        width: 30px;
        border-radius: 3px 3px 3px 3px;
        box-shadow: inset 0 1px 2px rgba(0,0,0,0.075);
    }
    
</style>

<form id="search-bar" action='/' method="GET">
    <input type="text" name="input_url" placeholder="Github URL"/>
    <input type="submit" name="submit" value="Fetch" />
</form>

<% if @error_msg %>
    <h4> An Error Occurred </h4>
    <p> <%= @error_msg %>
<% elsif @output_arr %>
    <table border="1">
        <tr>
            <td>Total number of open issues</td>
            <td> <%= @output_arr.shift %> </td>
        </tr>
        <tr>
            <td> Number of open issues that were opened in the last 24 hours</td>
            <td> <%= @output_arr.shift %></td>
        </tr>
        <tr>
            <td> Number of open issues that were opened more than 24 hours ago but less than 7 days ago</td>
            <td> <%= @output_arr.shift %></td>
        </tr>
        <tr>
            <td>Number of open issues that were opened more than 7 days ago</td>
            <td> <%= @output_arr.shift %></td>
        </tr>
    </table>
<% end %>

</body>
</html>